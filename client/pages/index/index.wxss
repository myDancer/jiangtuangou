/**index.wxss**/
page {
    background: #fff;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.container{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}
.header{
  background-image: linear-gradient(90deg,#0af,#0085ff);
  width: 100%;
  color: #fff;
  padding: 2.666667vw 3.733333vw 0;
  font-size: 32rpx;
  font-weight: 700;
}
.search, .search-wrapper{
  background-image: linear-gradient(90deg,#0af,#0085ff);
}
.search-wrapper{
  width: 100%;
  position: sticky;
  top: 0;
  z-index: 999;
}
.search{
  padding: 2vw 3.733333vw;
  margin: -.133333vw 0;
}
.content{
  background-color: #fff;
  height: 9.6vw;
  text-align: center;
  color: #999;
  border-radius: .266667vw;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.placehoder{
  line-height: 1;
}
.swiper-wrapper{
  width: 100%;
}
.slide-image{
  width: 90rpx;
  height: 90rpx;
}
.swiper-item{
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-wrap: wrap;
}
.catalog{
  width: 20%;
  margin-top: 3vw;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.adv-wrapper{
  width: 100%;
}
.adv{
  padding: 0 2.7vw;
  margin: 2.2vw 0;
  display: flex;
}
.adv-left{
  flex: 1;
  padding: 3.2vw 0 0 4vw;
  margin-right: .8vw;
  width: 50%;
  background: linear-gradient(0deg,#f4f4f4 5%,#fafafa 95%);
}
.adv-right{
  flex: 1;
  padding: 3.2vw 0 0 4vw;
  width: 50%;
  background: linear-gradient(0deg,#f4f4f4 5%,#fafafa 95%);
}
.adv-img{
  width: 240rpx;
  height: 160rpx;
  float: right;
}
.adv-title{
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
}
.adv-des{
  font-size: 28rpx;
  color: #777;
  margin-bottom: 2.4vw;
}
.adv-buy{
  font-weight: 700;
  font-size: 24rpx;
  color: #af8260;
}
.people-num{
  color: #e81919;
  display: inline-block;
}
.adv-buy1{
  color: #333;
}
.shoplist-title{
  width: 100%;
  background-color: #fff;
  height: 9.6vw;
  font-size: 30rpx;
  color: #000;
  display: flex;
  align-items: center;
  justify-content: center;
}
.shoplist-title:after, .shoplist-title:before{
  display: block;
  content: "";
  width: 5.333333vw;
  height: .266667vw;
  background-color: #999;
  margin-right: 3.466667vw;
}
.shoplist-title:after {
  margin-left: 3.466667vw;
}
.menu-wrapper{
  position: sticky;
  top: 200rpx;
  z-index: 100;
  width: 100%;
}
.menus{
  display: flex;
  width: 100%;
  justify-content: space-around;
}
.munu-item{
  font-size: 28rpx;
  text-align: center;
  flex: 1;
  color: #666;
  z-index: 101;
}
.shoplist{
  width: 100%;
}
.shop{
  padding: 4vw 0;
  border-bottom: .133333vw solid #eee;
}
.shop-info{
  display: flex;
  padding: 0 2.666667vw;
  justify-content: flex-start;
}
.logo-container{
  width: 17.333333vw;
  height: 17.333333vw;
}
.logo{
  width: 100%;
  height: 100%;
}
.main{
  padding-left: 2.666667vw;
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
}
.line{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.shopname{
  display: flex;
  justify-content: flex-start;
  font-size: 30rpx;
  font-weight: 700;
  color: #333;
}
.brand{
  font-weight: 700;
  margin-right: 1.333333vw;
  padding: .266667vw .666667vw;
  color: transparent;
  text-align: center;
  position: relative;
}
.brand:after{
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 0;
  content: '品牌';
  padding: .533333vw 1.333333vw;
  color: #6f3f15;
  font-weight: 700;
  font-size: 50rpx;
  border-radius: 1.066667vw;
  background-image: -webkit-linear-gradient(229deg,#fff100,#ffe339);
  background-image: linear-gradient(-139deg,#fff100,#ffe339);
  white-space: nowrap;
  transform: scale(.5);
  transform-origin: 0 0;
}
.rateWrap{
  display: flex;
  align-items: center;
}
.rating-wrapper{
  position: relative;
  margin-right: 1.066667vw;
  color: #666;
  font-size: 26rpx;
  overflow: hidden;
  display: inline-block;
  width: 14.933333vw;
  height: 2.666667vw;
}
.star{
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
  display: flex;
}
.none-star, .active-star{
  width: 14.933333vw;
  height: 2.666667vw;
}
.rate{
  font-size: 22rpx;
  color: #666;
}
.delivery{
  display: block;
}
.delivery-icon{
  margin-left: 1.066667vw;
  position: relative;
  padding: 0 .4vw;
  color: transparent;
  white-space: nowrap;
  font-size: 22rpx;
  border-radius: .4vw;
  line-height: 1.2;
  border: .133333vw solid transparent;
}
.delivery-icon::after{
  background-image: linear-gradient(45deg,#0085ff,#0af);
  color: #fff;
  border: .133333vw solid #0097ff;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 0;
  white-space: nowrap;
  content: '蜂鸟专送';
  font-size: .533333rem;
  padding: 0 .533333vw;
  border-radius: .8vw;
}
.money-limit{
  display: flex;
  font-size: 22rpx;
  color: #666;
}
.timedistance{
  display: flex;
  font-size: 22rpx;
  color: #999;
}
.division::before{
  margin: 0 .8vw;
  color: #ddd;
  content: "|";
}
.activityWrap{
  padding-left: 22.666667vw;
}
.tagLine{
  display: flex;
  align-items: center;
  margin: 2.666667vw 2.666667vw 0 0;
  font-size: 22rpx;
  color: rgb(102, 102, 102);
}
.recommendTag{
  margin-left: 1.333333vw;
  display: flex;
  align-items: center;
  border-radius: .133333vw;
  height: 4vw;
  padding: 0 1.066667vw;
  color: #e8470b;
}
.tag-icon{
  margin-right: .8vw;
  width: 2.666667vw;
  height: 2.666667vw;
  margin-top: .4vw;
}

.activities{
  display: flex;  
  margin-top: 27rpx;
  justify-content: space-between;
}
.activeList{
  display: flex;
  flex-direction: column;
}
.activeRow{
  display: flex;
  align-items: center;
  font-size: 22rpx;
  margin-top: .666667vw;
  color: #666;
}
.index-icn{
  background-color: rgb(112, 188, 70);
  height: 4.2vw;
  width: 4.2vw;
  font-size: 22rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0.5vw;
  margin-right: 1.6vw;
}
.del-icn{
  background-color: rgb(240, 115, 115);
}
.activeBtn{
  padding: .8vw 2.666667vw 0 0;
  color: #999;
  text-align: right;
  font-size: 20rpx;
  line-height: 1;
  display: flex;
  align-items: center;
}
.more-icn{
  width: 1.733333vw;
  height: 1vw;
  opacity: .9;
  margin-left: 2vw;
  -webkit-transition: all .3s ease-in-out;
  transition: all .3s ease-in-out;
  -webkit-transform: rotate(0deg);
  transform: rotate(0deg);
  fill: currentColor;
  will-change: transform;
  vertical-align: middle;
  position: relative;
  z-index: 1;
  text-align: right;
}