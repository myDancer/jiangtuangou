<!--index.wxml-->
<view class="container">
<!-- 头部 -->
  <view class='header'>
    <view>玉翎阁</view>
  </view>
  <!-- 搜索框 -->
  <view class='search-wrapper'>
    <view class='search'>
      <view class='content'>
        <view class='placehoder'>搜索饿了么商家，商品名称</view>
      </view>
    </view>
  </view>
<!-- 功能图标 -->
  <view class='swiper-wrapper'>
    <swiper class='swiper' indicator-dots="{{true}}" indicator-color="{{'rgba(0, 0, 0, .2)'}}"
    indicator-active-color="{{'rgba(0, 0, 0, .6)'}}">
        <swiper-item class="swiper-item">
          <view class='catalog' wx:for="{{onePageCatalogs}}" wx:key="{{item.id}}">
            <image src="{{item.img}}" class="slide-image"/>
            <view>{{item.name}}</view>
          </view>
        </swiper-item>
        <swiper-item class="swiper-item" wx:if="twoPageCatalogs.length">
          <view class='catalog' wx:for="{{twoPageCatalogs}}" wx:key="{{item.id}}">
            <image src="{{item.img}}" class="slide-image"/>
            <view>{{item.name}}</view>
          </view>
        </swiper-item>
    </swiper>
  </view>
  <!-- 广告推广 -->
  <view class='adv-wrapper'>
    <view class='adv  '>
      <view class='adv-left'>
        <view class='adv-title'>品质套餐</view>
        <view class='adv-des'>搭配齐全吃得好</view>
        <view class='adv-buy'>立即抢购 ></view>
        <image class='adv-img' src='https://fuss10.elemecdn.com/d/d4/16ff085900d62b8d60fa7e9c6b65dpng.png?imageMogr/format/webp/thumbnail/!240x160r/gravity/Center/crop/240x160/'></image>
      </view>
      <view class='adv-right'>
        <view  class='adv-title'>限量抢购</view>
        <view class='adv-des'>超值美味9.9元起</view>
        <view  class='adv-buy adv-buy1'><view class='people-num'>1145</view>人正在抢 ></view>
        <image class='adv-img' src='https://fuss10.elemecdn.com/d/d4/16ff085900d62b8d60fa7e9c6b65dpng.png?imageMogr/format/webp/thumbnail/!240x160r/gravity/Center/crop/240x160/'></image>
      </view>
    </view>
  </view>
  <!-- 推荐商家 -->
  <view class='shoplist-title'>推荐商家</view>
  <!-- 筛选 -->
  <view class='menu-wrapper'>
    <view class='menus'>
      <view class='munu-item'>综合排序</view>
      <view class='munu-item'>距离最近</view>
      <view class='munu-item'>品质联盟</view>
      <view class='munu-item'>筛选</view>
    </view>
  </view>
  <!-- 商家列表 -->
  <view class='shoplist'>
    <navigator url="/pages/shop/shop"	 class='shop' wx:for="{{initData.restaurants}}" wx:key="{{item.id}}">
      <view class='shop-info'>

        <view class='logo-container'>
          <image class='logo' src='https://fuss10.elemecdn.com/a/69/7b3c6f00d41a4ddbb3759bbece76cpng.png?imageMogr/format/webp/thumbnail/!130x130r/gravity/Center/crop/130x130/'></image>
        </view>
        <view class='main'>

          <view class='line'>
            <view class='shopname'>
              <view class='brand'>品牌</view><view>点都德（盘福楼-盘福店）</view>
            </view>
          </view>

          <view class='line'>
            <view class='rateWrap'>
              <view class="rating-wrapper">
                <view class='star'><image class='none-star' src='data:image/svg+xml;base64,'></image></view>
                <view class='star'>
                  <image class='active-star' src='data:image/svg+xml;base64,'></image>
                </view>
              </view>
            
              <view class='rate'>5.0</view>
              <view class='rate'>月售764单</view>
            </view>
            <view class='delivery'><view class='delivery-icon'>蜂鸟专送</view></view>
          </view>

          <view class='line'>
            <view class='money-limit'>
              <view>￥20起送</view>
              <view class='division'>优惠免配送费</view>
            </view>
            <view class='timedistance'>
              <view>910m</view>
              <view class='division'>34分钟</view>
            </view>
          </view>

        </view>
      </view>
      <view class='activityWrap'>

        <view class='tagLine'>
          <view>粤菜</view>
          <view class='recommendTag'>
            <image class='tag-icon' src='https://fuss10.elemecdn.com/a/c1/24c767ffa7fd296d3e2d6f01798c6png.png?imageMogr/format/webp/thumbnail/!20x20r/gravity/Center/crop/20x20/'></image>
            <view>口碑人气好店</view>
          </view>
        </view>

        <view class='activities'>
          <view class='activeList'>
            <view class='activeRow'>
              <view class='index-icn'>首</view><view>新用户下单立减17元</view>
            </view>
            <view class='activeRow'>
              <view class='index-icn del-icn'>减</view><view>满50减5，满90减10，满140减25</view>
            </view>
          </view>
          <view class='activeBtn'>
            <view>4个活动</view>
            <image class='more-icn' src='data:image/svg+xml;base64,'></image>
          </view>
        </view>

      </view>
    </navigator>
  </view>
</view>
