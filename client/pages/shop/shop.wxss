/* pages/shop.wxss */
.shop{
  width: 100%;
}
.nav{
  background-image: url(https://fuss10.elemecdn.com/6/25/35d6be97a57b3096e2b943f31576ajpeg.jpeg?imageMogr/format/webp/thumbnail/750x/thumbnail/!40p/blur/50x40/);
  width: 100%;
  height: 200rpx;
  background-size: cover;
  background-repeat: no-repeat;
  position: relative;
}
.nav::before{
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(119,103,137,.43);
}
.shopInfo{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  position: relative;
  padding: 8vw 0 0;
}
.logo{
  box-shadow: 0 0 0.4vw 0 rgba(0,0,0,.2);
  border-radius: .8vw;
  width: 20vw;
  height: 20vw;
  position: absolute;
  top: 0;
  left: 50%;
  margin-top: -16vw;
  margin-left: -10vw;
}
.shopName{
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
}
.item{
  margin-right: 16rpx;
}
.line{
  display: flex;
}
.line1{
  color: #666;
  margin-top: 1.733333vw;
}
.line2{
  color: #333;
  margin: 3vw auto 0;
  align-items: center;
}
.line3{
  color: #999;
  width: 80vw;
  margin: 2.266667vw auto 2.666667vw;
  padding: 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.first-icon{
  background-color: rgb(112, 188, 70);
  margin-right: 1.6vw;
  font-size: 20rpx;
  padding: 0.1vw 1.2vw;
  height: 4vw;
  display: inline-block;
  box-sizing: border-box;
  border-radius: .266667vw;
  color: #fff;
  font-weight: 600;
}
.discount{
  text-align: right;
  color: #999;
  padding: 0 1.8vw;
}
.shopTab{
  display: flex;
  position: sticky;
  top: 0px;
  z-index: 2;
  background-color: #fff;
}
.tabItem{
  flex: 1;
  text-align: center;
  color: #666;
  border-bottom: 1px solid #ebebeb;
  line-height: 10.666667vw;
  font-size: 30rpx;
  font-weight: 400;
}
.tabName{
  display: inline-block;
  position: relative;
}
.tabbar{
  background-color: rgb(35, 149, 255);
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: .533333vw;
}
.on{
  color: #333;
  font-weight: 700;
}